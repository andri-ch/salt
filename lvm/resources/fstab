proc             /proc       proc    defaults    0 0
/dev/xvda1       /           ext3    defaults,errors=remount-ro,noatime     0 1
/dev/xvdc1       none        swap    sw          0 0
/dev/vgpool/home	/home	ext4	defaults    0	2
# tmp had the options: rw,noatime,noexec,nosuid, but I can't install some 
# programs because of noexec, nosuid
